{
    "name": "my-desktop-app",
    "version": "0.1.0",
    "private": true,
    "main": "public/electron.js",
    "homepage": "./",
    "dependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^13.0.0",
        "@testing-library/user-event": "^13.2.1",
        "electron-is-dev": "^2.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "sqlite3": "^5.1.2",
        "web-vitals": "^2.1.0"
    },
    "scripts": {
        "start-react": "react-scripts start",
        "build-react": "react-scripts build",
        "start-electron": "nodemon --watch ./public/* --exec \"electron .\"",
        "dev": "concurrently \"yarn start-react\" \"wait-on http://localhost:3000 && yarn start-electron\" ",
        "postinstall": "electron-builder install-app-deps",
        "pack-app": "yarn build-react && electron-builder --dir",
        "pack-build": "electron-builder --dir",
        "build": "yarn build-react && electron-builder",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "build": {
        "appId": "com.soberjoe.mydesktopapp",
        "productName": "My Desktop App",
        "copyright": "Johan Ã–stling 2022",
        "files": [
            "build/**/*"
        ],
        "directories": {
            "buildResources": "build"
        },
        "extraResources": [
            {
                "from": "./db/",
                "to": "db/",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                "zip",
                "dmg"
            ]
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "autoprefixer": "^10.4.13",
        "concurrently": "^7.5.0",
        "electron": "^21.3.0",
        "electron-builder": "^23.6.0",
        "nodemon": "^2.0.20",
        "postcss": "^8.4.19",
        "tailwindcss": "^3.2.4",
        "wait-on": "^6.0.1"
    }
}
